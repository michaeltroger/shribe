<!doctype html>
<html>
<head>
    <title>Shribe - Signup</title>
    <% include ../partials/head %> <!-- general meta data, css files -->
    <link rel="stylesheet" href="files/css/landing.css">
</head>
<body>
<div class="container">
    <div class="row">
        <div id="landing">
            <div id="landingContent">
                <h1>
                    Sign up to
                    <img src="../files/icons/pencil_icon.png" alt="write a text message">
                    <span class="shribe">shribe</span>
                </h1>

                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
                <% } %>

                <!-- LOGIN FORM -->
                <form class="form-horizontal" action="/signup" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="name" maxlength="30">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Email</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" name="email" maxlength="100">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" name="password" maxlength="200">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-default btn-lg">Signup</button>
                        </div>
                    </div>
                </form>
                <p>Already have an account? <a href="/">Login</a></p>
            </div>
        </div>
    </div> <!-- END ROW -->
    <footer>
        <% include ../partials/footer %> <!-- jquery and general script file -->
    </footer>
</div> <!-- END CONTAINER -->

</body>
</html>