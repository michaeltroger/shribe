</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6" id="users">
                <div id="userInfo">
                    <div class="contacts-btn" id="contacts-btn" title="Show contacts">
                        <p class="newMsgCounter"></p>
                        <div></div>
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                    <div id="userOptions">
                        <button class="btn btn-default" id="closeUserOptions"><</button>
                        <button class="btn btn-default dropdown-toggle" type="button" id="toggleBlockedContacts" data-toggle="dropdown">
                            Unblock Contacts <span class="caret"></span></button>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="toggleBlockedContacts">
                        </ul>
                    </div>
                    <p><em></em> <a href="/logout">Logout</a></p>
                </div>
                <div id="contactsContainer">
                    <ul id="contacts"></ul>
                </div>
                <form id="newContact" action="" >
                    <label for="addcontactfield">Start new conversation with </label>
                    <input id="addcontactfield" type="email"placeholder="enter email address" maxlength="100">
                        <span id="addcontactbutton" class="cButton">
                            <img src="../files/icons/plus_icon.png" alt="add as contact">
                        </span>
                </form>
            </div> <!-- END LEFT COLUMN -->

            <div class="col-md-6" id="conversation">
                <div id="convInfo" style="display: none">
                    <div id="convOptions">
                        <button class="btn btn-default" id="closeConvOptions"><</button>
                        <button class="btn btn-default" id="blockBtn">Block</button>
                        <span id="colors">
                            <button id="c47747F" class="btn btn-default">&nbsp;</button>
                            <button id="c3CB371" class="btn btn-default">&nbsp;</button>
                            <button id="cE9967A" class="btn btn-default">&nbsp;</button>
                            <button id="cFFE4B5" class="btn btn-default">&nbsp;</button>
                            <button id="cFFC0CB" class="btn btn-default">&nbsp;</button>
                            <button id="cF4A460" class="btn btn-default">&nbsp;</button>
                            <button id="cDDA0DD" class="btn btn-default">&nbsp;</button>
                            <button id="c90EE90" class="btn btn-default">&nbsp;</button>
                            <button id="cFFF0F5" class="btn btn-default">&nbsp;</button>
                            <button id="cF0E68C" class="btn btn-default">&nbsp;</button>
                        </span>
                    </div>
                    <p id="convName" title="Set conversation color / block user"></p>
                    <div id="filterContainer">
                        <button class="btn btn-default dropdown-toggle" type="button" id="toggleFilters" data-toggle="dropdown">
                            Filter by type <span class="caret"></span></button>
                        <ul class="dropdown-menu pull-right" role="menu" aria-labelledby="toggleFilters">
                            <li><button id="showAll" class="btn btn-default btn-filter active" data-toggle="button">Show all types</button></li>
                            <li><button id="text" class="btn btn-default btn-filter" data-toggle="button">Text</button></li>
                            <li><button id="image" class="btn btn-default btn-filter" data-toggle="button">Images</button></li>
                            <li><button id="emoticon" class="btn btn-default btn-filter" data-toggle="button">Emoticons</button></li>
                            <li><button id="location" class="btn btn-default btn-filter" data-toggle="button">Locations</button></li>
                            <li><button id="event" class="btn btn-default btn-filter" data-toggle="button">Events</button></li>
                        </ul>
                    </div>
                </div>
                <div id="convContainer">
                    <div id="convHeader">
                        <h1>Welcome back to <span class="shribe">shribe</span>!</h1>
                    </div>
                    <ul id="messages"></ul>
                </div>

                <div id="newMsgContainer">
                    <div id="newMsgButtons" class="form-inline" style="display: none">
                        <input id="keyInput" autofocus>
                        <span id="newText" class="cButton">
                            <img src="../files/icons/pencil_icon.png" alt="write a text message">
                        </span>
                        <div class="cButton">
                            <img src="../files/icons/image_icon.png" alt="send an image">
                            <div class="fileButton">
                                <input type="file" id="imagefile" hidden="hidden" accept="image/*">
                            </div>
                        </div>
                        <span id="newEmoticon" class="cButton">
                            <img src="../files/icons/emoticon_icon.png" alt="send an emoticon">
                        </span>
                        <span id="newLocation" class="cButton">
                            <img src="../files/icons/location_icon.png" alt="send a location">
                        </span>
                        <span id="newEvent" class="cButton">
                            <img src="../files/icons/date_icon.png" alt="send an event">
                        </span>
                    </div>
                    <div id="sendText" style="display: none">
                        <button class="back">&lt;</button>
                        <textarea id="m" rows="1" autofocus></textarea>
                        <button id="textBtn">Send</button>
                    </div>
                    <div id="sendEmoticon" style="display: none">
                        <button class="back">&lt;</button>
                        <span id="emoticons">
                            <img src="../files/emoticons/laugh.png" id="laugh" class="emoticon">
                            <img src="../files/emoticons/smile.png" id="smile" class="emoticon">
                            <img src="../files/emoticons/neutral.png" id="neutral" class="emoticon">
                            <img src="../files/emoticons/frown.png" id="frown" class="emoticon">
                            <img src="../files/emoticons/cry.png" id="cry" class="emoticon">
                        </span>
                    </div>
                    <div id="sendLocation" style="display: none">
                        <button class="back">&lt;</button>
                        <input type="text" id="address" placeholder="enter a place!">
                        <button id="addressBtn" type="button">Send</button>
                        <button id="locationBtn">My location</button>
                    </div>
                    <div id="sendEvent" style="display: none">
                        <button class="back">&lt;</button>
                        <input type='text' id='datetimepicker' placeholder="Date">
                        <input type="text" id="eventdescription" placeholder="Event description">
                        <button id="eventBtn" type="button">Send</button>
                    </div>
