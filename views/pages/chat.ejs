                    </div>  <!-- END MESSAGE CONTAINER -->
                </div> <!-- END RIGHT COLUMN -->
            </div> <!-- END ROW -->
        </div> <!-- END CONTAINER -->

        <footer>
            <script src="files/js/lib/socket.io-1.3.5.js"></script>
